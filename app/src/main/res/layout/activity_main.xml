<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/exercicio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="223dp"
        android:onClick="navegarExercicio"
        android:text="Exercício 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="navegarExercicio"
        android:text="Exercício 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercicio1" />

    <Button
        android:id="@+id/exercicio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="navegarExercicio"
        android:text="Exercício 3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercicio2" />

    <Button
        android:id="@+id/exercicio4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="navegarExercicio"
        android:text="Exercício 4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercicio3" />

    <Button
        android:id="@+id/exercicio5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="navegarExercicio"
        android:text="Exercício 5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercicio4" />
</androidx.constraintlayout.widget.ConstraintLayout>